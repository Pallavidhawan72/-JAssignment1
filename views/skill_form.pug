extends layout

block content
  h1= skill ? 'Edit Skill' : 'Add Skill'
  form(action=skill ? `/admin/skills/${skill._id}/edit` : '/admin/skills/add', method='POST')
    .mb-3
      label.form-label(for='name') Name
      input.form-control(type='text', name='name', id='name', required, value=skill ? skill.name : '')
    .mb-3
      label.form-label(for='level') Level
      select.form-select(name='level', id='level', required)
        option(value='') Select level
        option(value='Beginner', selected=skill && skill.level==='Beginner') Beginner
        option(value='Intermediate', selected=skill && skill.level==='Intermediate') Intermediate
        option(value='Advanced', selected=skill && skill.level==='Advanced') Advanced
    .mb-3
      label.form-label(for='category') Category
      input.form-control(type='text', name='category', id='category', value=skill ? skill.category : '')
    button.btn.btn-primary(type='submit')= skill ? 'Update Skill' : 'Add Skill'
    a.btn.btn-secondary.ms-2(href='/admin/skills') Cancel