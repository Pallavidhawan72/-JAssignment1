extends layout

block content
  h1 Skills
  a.btn.btn-success.mb-3(href='/admin/skills/add') Add Skill
  if skills.length
    table.table.table-striped
      thead
        tr
          th Name
          th Level
          th Category
          th Actions
      tbody
        each skill in skills
          tr
            td= skill.name
            td= skill.level
            td= skill.category || '-'
            td
              a.btn.btn-warning.btn-sm(href=`/admin/skills/${skill._id}/edit`, style='margin-right:6px;') Edit
              form(action=`/admin/skills/${skill._id}/delete`, method='POST', style='display:inline')
                button.btn.btn-danger.btn-sm(type='submit') Delete
  else
    p No skills found. 